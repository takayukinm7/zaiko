<%= form_with(url: search_products_path, local: true, method: :get, class: "search-form") do |f| %>
  <%= f.text_field :keyword, placeholder: "製品を検索する", class: "search-input" %>
  <%= f.submit "検索", class: "search-btn" %>
<% end %>
<div class="contents row">
  <% @products.each do |product| %>
    <div class="content_post">
      <span class="name">
        <%= product.name %>
      </span>
      <div class="more">
        <ul class="more_list">
          <li>
            <%= link_to '詳細', product_path(product.id), method: :get %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
</div>